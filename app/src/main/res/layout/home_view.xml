<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".VetoView">

    <TextView
        android:id="@+id/topLabel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/teal"
        android:textSize="80sp"
        android:text="Picky Eaters"
        android:paddingTop="50sp"
        android:layout_alignParentTop="true"
        android:textAlignment="center"/>
    
    <Button
        android:id="@+id/home_new_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@id/topLabel1"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:text="NEW" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/home_edittext_sessionID"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/home_new_button"
        android:hint="Enter the session ID to join"
        android:inputType="number" />

    <Button
        android:id="@+id/home_join_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@id/home_edittext_sessionID"
        android:layout_centerHorizontal="true"
        android:text="JOIN"/>


</RelativeLayout>
