<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.VetoView">

    <TextView
        android:id="@+id/captain_session_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/teal"
        android:textSize="20dp"
        android:text="Session Code"
        android:paddingTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:textAlignment="center"/>
    
    <TextView
        android:id="@+id/captain_session_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="29A4"
        android:textColor="@color/maroon"
        android:textSize="72dp"
        android:layout_below="@id/captain_session_text"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/captain_distanceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance (Km):"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/captain_session_id"
        android:layout_marginStart="25dp"/>

    <EditText
        android:id="@+id/captain_distanceEditText"
        android:layout_width="100dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/captain_distanceLabel"
        android:inputType="number"/>


    <TextView
        android:id="@+id/captain_numUsersTitle"
        android:layout_below="@id/captain_distanceEditText"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:text="Total Users in Session:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/captain_userCount"
        android:layout_below="@id/captain_numUsersTitle"
        android:layout_centerHorizontal="true"
        android:text="1"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/captain_startveto_button"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:layout_height="@dimen/button_height"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        style="@style/MaroonButton"
        android:text="Start Vetoing"/>

</RelativeLayout>
